{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",

    "outDir": "lib",

    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "incremental": true,

    /* Bundler mode */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "declaration": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    /* Linting */
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true
  }
}
